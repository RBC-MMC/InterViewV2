@model EmploymentCv
@{
    ViewData["Title"] = "CvDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--  BEGIN CUSTOM STYLE FILE  -->
<link href="~/src/assets/css/light/apps/invoice-preview.css" rel="stylesheet" type="text/css" />
