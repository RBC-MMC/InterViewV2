<style>
    fieldset {
    border: 1px solid #adadaddb;
    border-radius: 8px;
    padding: 15px 10px 15px 10px;
    background-color: #e1e1e16b;
    margin-bottom: 30px;
    }

    legend {
    border: 1px solid #adadaddb;
    /*  width: 330px; */
    padding: 3px 0px;
    text-align: center;
    border-radius: 7px;
    margin: -16px;
    margin-left: -11px;
    background-color: white;
    margin-bottom: 10px;
    }

    .statikPTitle{
    text-transform: uppercase;
    font-size: 17px;
    font-weight: 700;
    width: 48%;
    margin: 0;
    margin-top:10px;
    }
    .statikP {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 11.5px;
    margin-right: 20px;
    width:34%;
    }
    .daynamicP{
    font-size: 17px;
    font-weight: 700;
    text-transform: uppercase;
    }
    .titleHr{
    height: 0px;
    border: 2px solid !important;
    width: 100%;
    margin-bottom: 10px;
    margin-top: 0;
    }
    .appid{
        float: right;
        margin-left: 39%;
        margin-top:4px;
        font-size: 18px;
        color: red;
        font-weight: 700;
    }
</style>
<div id="content" class="main-content">
    <div class="layout-px-spacing">

        <div class="middle-content container-xxl p-0">

            <div class="row invoice layout-top-spacing layout-spacing">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                    <div class="doc-container">

                        <div class="row">

                            <div class="col-xl-12">
                                <div class="row">

                                    <div  class=" col-12">
                                        <a href="javascript:void(0);" style="float:right;" class="btn btn-secondary btn-print  action-print mb-2">Print</a>
                                    </div>
                                </div>
                                <div class="invoice-container">
                                    <div id="ct" class="invoice-inbox row px-3">

                                        <div class="col-2">
                                            <img class="w-100" src="~/img/cdc_logo_template__high_res_-removebg-preview.png" />
                                        </div>
                                        <div class="col-10 d-flex align-items-center" >
                                            <h2>CDC - Candidate Of <span style="font-weight:700;">@Model.FirstName @Model.FamilyName</span>  Detalis </h2>
                                            <img src="/Home/GetUserImg?id=@Model.Id" alt="Photo" style="width: 10%; margin: 15px 20px 20px 0px; border-radius: 5px;" />
                                        </div>
                                        <hr />
                                        <div> 
                                            <div class="d-flex"> 
                                            <p class="statikPTitle">Personal information </p> <p class="appid">@Model.AppID</p> 
                                            </div>
                                            <hr class="titleHr" />
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Name:</p> 
                                            <p class="daynamicP">@Model.FirstName</p>
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Surname:</p>
                                            <p class="daynamicP">@Model.FamilyName</p>
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Father Name:</p>
                                            @if (Model.FatherName != null)
                                            {
                                                <p class="daynamicP">@Model.FatherName</p>
                                            }
                                            else
                                            {
                                                <p class="daynamicP"> ------ </p>
                                            }
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Gender:</p>
                                            <p class="daynamicP">@Model.Gender</p>
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Date Of Birth:</p>
                                            <p class="daynamicP">@Model.DateOfBirth.ToString("dd/MM/yyyy")</p>
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Nationality:</p>
                                            <p class="daynamicP">@Model.Nationality</p>
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Marital Status:</p>
                                            <p class="daynamicP">@Model.MaritalStatus</p>
                                        </div>
                                        <div >
                                            <p class="statikPTitle">Contact information </p>  <hr class ="titleHr" />
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Registered Address:</p>
                                            <p class="daynamicP">@Model.HomeAddress</p>
                                        </div> <div class=" d-flex">
                                            <p class="statikP">Physical Address:</p>
                                            @if (Model.PhysicalAddress != null)
                                            {
                                                <p class="daynamicP">@Model.PhysicalAddress</p>
                                            }
                                            else
                                            {
                                                <p class="daynamicP">-----</p>
                                            }
                                        </div> <div class=" d-flex">
                                            <p class="statikP">Email Address:</p>
                                            <p class="daynamicP">@Model.EmailAddress</p>
                                        </div> 
                                        <div class=" d-flex">
                                            <p class="statikP">Phone:</p>
                                            <p class="daynamicP">@Model.FullPhone</p>
                                        </div>
                                        <div >
                                            <p class="statikPTitle">Physical health information </p>  <hr class="titleHr" />
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Describe any serious illness you have had:</p>
                                            <p class="daynamicP">@Model.DescribeIllness</p>
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">During the last 2 years, have you been ill and unable to go to work for more than five days? If yes, give brief details:</p>
                                            <p class="daynamicP">@Model.DuringBrief</p>
                                        </div>

                                        <div>
                                            <p class="statikPTitle">LANGUAGE</p>  <hr class="titleHr" />
                                        </div>
                                        @if(Model.AzeLanguage != null)
                                        {       
                                            <div class=" d-flex">
                                                <p class="statikP">Azerbaijani:</p>
                                                <p class="daynamicP">@Model.AzeLanguage</p>
                                            </div>    
                                        }
                                        @if (Model.EnLanguage != null)
                                        {
                                            <div class=" d-flex">
                                                <p class="statikP">English:</p>
                                                <p class="daynamicP">@Model.EnLanguage</p>
                                            </div>
                                        }
                                        @if (Model.RuLanguage != null)
                                        {
                                            <div class=" d-flex">
                                                <p class="statikP">Russian:</p>
                                                <p class="daynamicP">@Model.RuLanguage</p>
                                            </div>
                                        }
                                        @if (Model.OtherLanguage != null)
                                        {
                                            <div class=" d-flex">
                                                <p class="statikP">Other:</p>
                                                <p class="daynamicP">@Model.OtherLanguage</p>
                                            </div>
                                        }


                                        @if (Model.Cv_Eductions != null)
                                        {
                                            <div>
                                                <p class="statikPTitle">EDUCTION</p>  <hr class="titleHr" />
                                            </div>
                                            @foreach (var e in Model.Cv_Eductions)
                                            {

                                                <div class=" d-flex">
                                                    <p class="statikP">Institution Name:</p>
                                                    <p class="daynamicP">@e.EducationalInstitution</p>
                                                </div>
                                                <div class=" d-flex">
                                                    <p class="statikP">Degree:</p>
                                                    <p class="daynamicP">@e.EducationDegree</p>
                                                </div>
                                                <div class=" d-flex">
                                                    <p class="statikP">Specialization:</p>
                                                    <p class="daynamicP">@e.EducationSpecialization</p>
                                                </div>
                                                <div class=" d-flex">
                                                    <p class="statikP">Start Year:</p>
                                                    <p class="daynamicP">@e.EducationStartDate?.ToString("d/M/yyyy")</p>
                                                </div>
                                                <div class=" d-flex">
                                                    <p class="statikP">Graduation Year:</p>
                                                    <p class="daynamicP">@e.EducationEndDate?.ToString("d/M/yyyy")</p>
                                                </div>
                                                <hr style=" width: 50%; border: 1px solid;margin-bottom: 10px;" />
                                            }
                                        }

                                        @if (Model.WorkExperienceYES == "true")
                                        {
                                            <div>
                                                <p class="statikPTitle">WORK EXPERIENCE </p>  <hr class="titleHr" />
                                            </div>
                                            @foreach (var w in Model.Cv_WorkExperiences)
                                            {
                                                <div class=" d-flex">
                                                    <p class="statikP">Company Name:</p>
                                                    <p class="daynamicP">@w.CompanyName</p>
                                                </div>
                                                <div class=" d-flex">
                                                    <p class="statikP">Department / Position:</p>
                                                    <p class="daynamicP">@w.LatestPosition</p>
                                                </div>
                                                <div class=" d-flex">
                                                    <p class="statikP">Job Responsibilities:</p>
                                                    <p class="daynamicP">@w.JobResponsibilities</p>
                                                </div>
                                                <div class=" d-flex">
                                                    <p class="statikP">Start Date:</p>
                                                    <p class="daynamicP">@w.WorkStartDate?.ToString("d/M/yyyy")</p>
                                                </div>
                                                <div class=" d-flex">
                                                    <p class="statikP">Currently Employed?:</p>
                                                    <p class="daynamicP">@w.IAmCurrentlyWorking</p>
                                                </div>
                                                @if (w.IAmCurrentlyWorking == "false")
                                                {
                                                    <div class=" d-flex">
                                                        <p class="statikP">End Date:</p>
                                                        <p class="daynamicP">@w.WorkEndtDate?.ToString("d/M/yyyy")</p>
                                                    </div>
                                                    <div class=" d-flex">
                                                        <p class="statikP">Reason For Leaving:</p>
                                                        <p class="daynamicP">@w.ReasonForLeavingWork</p>
                                                    </div>
                                                }
                                                <hr style=" width: 50%; border: 1px solid;margin-bottom: 10px;" />
                                            }
                                        }

                                        @if(Model.Cv_ReferanceFrients.Count != 0)
                                        {
                                            <div>
                                                <p class="statikPTitle">REFERANCE </p>  <hr style=" width: 50%; border: 1px solid;margin-bottom: 10px;" />
                                            </div>
                                            @foreach (var r in Model.Cv_ReferanceFrients)
                                            {
                                                <div class=" d-flex">
                                                    <p class="statikP">Name:</p>
                                                    <p class="daynamicP">@r.FriendReferenceName</p>
                                                </div>  <div class=" d-flex">
                                                    <p class="statikP">Surname:</p>
                                                    <p class="daynamicP">@r.FriendReferenceSurname</p>
                                                </div>  <div class=" d-flex">
                                                    <p class="statikP">Phone:</p>
                                                    <p class="daynamicP">@r.FriendReferencePhone</p>
                                                </div>
                                                <hr style=" width: 50%; border: 1px solid;margin-bottom: 10px;" />
                                            }
                                        }

                                        <div>
                                            <p class="statikPTitle">ADDITIONAL INFORMATION </p>  <hr class="titleHr" />
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">List any other qualifications, skills, and experiences:</p>
                                            @if (Model.AnyOtherSkillsYouHave != null)
                                            {
                                                <p class="daynamicP">@Model.AnyOtherSkillsYouHave</p>
                                            }
                                            else
                                            {
                                                <p class="daynamicP">-----</p>
                                            }
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Provide additional information about yourself and your skills to support your application:</p>
                                            @if (Model.YourSkillsThatCanSupportYourApplication !=null)
                                            {

                                            <p class="daynamicP">@Model.YourSkillsThatCanSupportYourApplication</p>
                                            }
                                            else
                                            {
                                                <p class="daynamicP">-----</p>

                                            }
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Are you ready to work offshore ?:</p>
                                            <p class="daynamicP">@Model.WorkingAtSeaYesNo</p>
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Position applied for:</p>
                                            <p class="daynamicP">@Model.CandidatePositions</p>
                                        </div>
                                        <div class=" d-flex">
                                            <p class="statikP">Created date:</p>
                                            <p class="daynamicP">@Model.CreatedDate</p>
                                        </div>
                                         @if (Model.Cv_OtherFiles.Count != 0)
                                           {
                                        <div>
                                                <p class="statikPTitle">ATTACHMENTS</p>  <hr class="titleHr" />
                                        </div>
                                            foreach (var file in Model.Cv_OtherFiles.ToList())
                                            {
                                        <div class=" d-flex">
                                            <p class="statikP">File Name:</p>
                                            <p class="daynamicP">@file.FileName</p>
                                        </div>
                                                <div class="form-group mt-2 ">
                                                    <a asp-action="GetDownolandFile" asp-route-id="@file.OtherFile_ID" class="btn btn-success" target="_blank">Download</a>
                                                </div>
                                            }
                                        }
